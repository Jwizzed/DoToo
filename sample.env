# .env
# PostgreSQL Database Connection
# Format: postgresql+asyncpg://<user>:<password>@<host>:<port>/<database_name>
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/todo_db"

# JWT Settings
SECRET_KEY="your_super_secret_key_change_this_in_production" # Use `openssl rand -hex 32` to generate a strong key
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Cloud Storage (if not storing locally)
# CLOUD_STORAGE_BUCKET="your-bucket-name"
# SERVICE_ACCOUNT_KEY_PATH="/path/to/your/service-account-key.json"

# Base URL for constructing image URLs (adjust if needed)
# Ensure it ends with a trailing slash if needed by your setup
IMAGE_BASE_URL="http://localhost:8000/static/images/"